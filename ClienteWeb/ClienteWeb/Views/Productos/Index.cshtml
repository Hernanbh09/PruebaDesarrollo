@model IEnumerable<ClienteWeb.Models.Producto>
@{
    Layout = "_Layout";
    var mensaje = TempData["MensajeExito"] as string;
    var error = ViewBag.ErrorConexion as string;
}

<div class="container mt-4">
    <h2>Listado de Productos</h2>

    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger" role="alert">
            @error
        </div>
    }
    <a asp-action="Crear" class="btn btn-success mb-3">
        Nuevo Producto
    </a>
    <table id="tblProductos" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nombre</td>
                    <td>@p.Precio</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@p.Id"
                           class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@p.Id"
                           class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (!string.IsNullOrEmpty(mensaje))
{
    @await Html.PartialAsync("_ModalExito", mensaje)
}
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tblProductos').DataTable();

            @if (!string.IsNullOrEmpty(mensaje))
            {
                    <text>
                    var modal = new bootstrap.Modal(document.getElementById('modalExito'));
                    modal.show();
                    </text>
            }
        }); 
    </script>
}